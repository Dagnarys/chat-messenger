{
  "openapi": "3.0.0",
  "info": {
    "title": "My API",
    "version": "1.0.0",
    "description": "API description"
  },
  "paths": {
    "/sendFile": {
      "post": {
        "summary": "Send a file",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "file": {
                    "type": "string"
                  },
                  "fileName": {
                    "type": "string"
                  },
                  "fileSize": {
                    "type": "integer"
                  },
                  "fileType": {
                    "type": "string"
                  },
                  "id": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "File sent successfully"
          }
        }
      }
    },
    "/receiveFile": {
      "get": {
        "summary": "Receive files",
        "responses": {
          "200": {
            "description": "List of available files"
          }
        }
      }
    }
  }
}
